<h1>Posts for <%= link_to @blog.name, @blog %></h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Updated At</th>
     <th>Created At</th>
  </tr>

<!-- START:start -->
<% for post in @posts -%>
  <!-- render registration attributes -->
<!-- END:start -->

  <tr>
    <td><%=h post.title %></td>
    <td><%=h post.body %></td>
     <td><%=h post.updated_at %></td> 
    <td><%=h post.created_at %></td>
  <!-- START:start -->
  <%= link_to 'Show', 
        blog_post_path(@blog, post) %> |

  <%= link_to 'Edit', 
        edit_blog_post_path(@blog, post) %> |

  <%= link_to 'Destroy', 
        blog_post_path(@blog, post), 
        :confirm => 'Are you sure?', 
        :method => :delete %>          
  <!-- END:start -->
    </td>
  </tr>
<!-- START:start -->
<% end -%>
<!-- END:start -->
</table>

<br />

<%= link_to 'New Post', new_blog_post_path(@blog) %>
